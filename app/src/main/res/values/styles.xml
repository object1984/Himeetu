<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="AppTheme.White" parent="BaseAppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Transparent" parent="BaseAppTheme">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
    </style>


    <!-- book share bottom anim style -->
    <style name="ShareBottomAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="Hi" />

    <style name="Hi.Input" />

    <style name="Hi.Input.Container">
        <item name="android:background" >@drawable/bg_input_purple</item>
    </style>

    <style name="Hi.Text" />

    <style name="Hi.Text.Big" />

    <style name="Hi.Text.Normal" />

    <style name="Hi.Text.Small" />

</resources>
