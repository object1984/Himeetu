<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_default"
    android:paddingTop="@dimen/main_search_bar_padding_top"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_marginTop="@dimen/main_search_bar_margin_top"
        android:layout_marginRight="@dimen/main_search_bar_margin_horizontal"
        android:layout_marginBottom="@dimen/main_search_bar_margin_bottom"
        android:layout_marginLeft="@dimen/main_search_bar_margin_horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/shape_search_main"
        android:layout_height="@dimen/main_search_bar_height">
            <TextView
                android:clickable="true"
                android:id="@+id/text_search"
                android:drawablePadding="5dp"
                android:textColor="@color/text_write"
                android:text="@string/search"
                android:textSize="@dimen/font_small"
                android:drawableLeft="@drawable/ic_search"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>