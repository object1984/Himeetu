<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_login"
    android:id="@+id/container"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_above="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="-30dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_horizontal"
                android:text="Hi Meet"
                android:drawablePadding="15dp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/ic_login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="41dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_login_input"
                android:orientation="vertical"
                android:padding="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_login_username"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        android:text="Hi Meet"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/font_normal"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:visibility="invisible"
                        android:background="@color/transparent"
                        android:src="@drawable/selector_input_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginRight="3dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_login_password"
                        android:background="@color/transparent"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/font_normal"
                        android:text="Hi Meet"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:visibility="invisible"
                        android:background="@color/transparent"
                        android:src="@drawable/selector_input_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:text="登录"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_purple"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/login_forget_password"
                    android:background="@color/transparent"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/text_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/text_register"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/login_register"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>