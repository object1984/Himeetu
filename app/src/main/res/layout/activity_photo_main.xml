<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@color/white" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-100dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_1"
            android:background="@color/transparent"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_main_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_2"
            android:background="@color/transparent"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_main_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_close"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_photo_main_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>