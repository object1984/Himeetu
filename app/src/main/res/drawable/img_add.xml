<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="80dp" android:width="80dp" />
            <stroke android:color="#C8C8C8" android:width="3px" />
        </shape>
    </item>

    <item android:height="40dp" android:width="40dp" android:gravity="center">
        <shape android:shape="line"  >
            <size android:width="40dp" />
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
            <stroke android:color="#C8C8C8" android:width="3px" />
        </shape>
    </item>

    <item  android:height="40dp" android:width="3px" android:gravity="center">
        <shape android:shape="rectangle"  >
            <solid  android:color="#C8C8C8"   />
            <size android:width="3px" android:height="1dp" />
        </shape>
    </item>
</layer-list>